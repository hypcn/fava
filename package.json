  "license": "MIT",
  "main": "dist/index.js",
  "bin": {
    "fava": "./dist/cli/cli.js"
  },
  "scripts": {
    "dev": "rimraf dist && concurrently npm:dev-lib npm:dev-ui npm:dev-ui-watch",
    "dev-lib": "tsc --watch --preserveWatchOutput --project tsconfig.build.json",
    "dev-ui": "vite",
    "dev-ui-watch": "vite build --watch",
    "prebuild": "rimraf dist",
    "build": "npm run build-lib && npm run build-ui",
    "build-lib": "tsc --project tsconfig.build.json",
    "build-ui": "vite build",
    "prepublishOnly": "npm run build",
    "start": "node dist/cli/cli.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@hypericon/axe": "^0.5.4",
    "cors": "^2.8.5",
    "drivelist": "^11.1.0",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "fs-extra": "^11.1.1",
    "mime": "^3.0.0",
    "node-fetch": "^2.6.9",
    "url-join": "^4.0.1",
    "ws": "^8.13.0",
    "yargs": "^17.7.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.5.1",
    "@types/mime": "^3.0.1",
    "@types/mithril": "^2.0.12",
    "@types/node": "^18.16.0",
    "@types/node-fetch": "^2.6.3",
    "@types/url-join": "^4.0.1",
    "@types/ws": "^8.5.4",
    "@types/yargs": "^17.0.24",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.0.1",
    "jest": "^29.5.0",
    "mithril": "^2.2.2",
    "postcss": "^8.4.23",
    "rimraf": "^5.0.0",
    "tailwindcss": "^3.3.2",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4",
    "vite": "^4.3.3"
  },
  "files": [
    "dist"
  ]
}
